<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ChooseLevel">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Level"
            style="?titleText"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3.7">

        <Button
            android:id="@+id/beginner"
            style="?levelButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Beginner (3 X 3)"
            android:textSize="18sp" />
        <Button
            android:id="@+id/middle"
            style="?levelButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Middle (4 X 4)"
            android:textSize="18sp"
            android:layout_below="@id/beginner"
            android:layout_marginTop="18dp"/>
        <Button
            android:id="@+id/hard"
            style="?levelButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Hard (5 X 5)"
            android:textSize="18sp"
            android:layout_below="@id/middle"
            android:layout_marginTop="18dp"/>
        <Button
            android:id="@+id/expert"
            style="?levelButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Expert (6 X 6)"
            android:textSize="18sp"
            android:layout_below="@id/hard"
            android:layout_marginTop="18dp"/>
        <Button
            android:id="@+id/crazy"
            style="?levelButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Crazy (7 X 7)"
            android:textSize="18sp"
            android:layout_below="@id/expert"
            android:layout_marginTop="18dp"/>
        <ImageView
            android:id="@+id/mute_level"
            android:src="@drawable/ic_volume_up_black_48dp"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:contentDescription="Mute"
            android:scaleType="fitCenter"
            style="?icons"
            android:layout_marginLeft="10dp"
            android:adjustViewBounds="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>